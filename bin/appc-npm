#!/usr/bin/env node

var main = require('../');

var argv = process.argv.slice(2);

var type = argv.shift();
var src = argv.shift() || process.cwd();

if (!type) {
	console.log('Usage: appc-npm <type> [src]');
	console.log();
	process.exit(0);
}

main({
	type: type,
	src: src

}, function (err, pkg) {

	if (err) {
		console.log(err.stack);
		console.log();
		return process.exit(1);
	}

	console.log('+ ' + pkg.name + '@' + pkg.version);
	console.log();

	process.exit(0);
});
